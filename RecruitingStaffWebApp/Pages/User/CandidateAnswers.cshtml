@page
@model RecruitingStaff.WebApp.Pages.User.CandidateAnswersModel
@{
}
<div class="row justify-content-center">
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>Ответ</th>
                <th>Оценка</th>
                <th>Комментарий</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var answer in Model.Answers)
            {
                <tr>
                    <td>@answer.Text</td>
                    <td>@answer.Estimation</td>
                    <td>@answer.Comment</td>
                    <td>
                    <a class="btn btn-warning">Изменить</a>
                        <form class="d-inline" method="post">
                            <input type="hidden" name="answerId" value="@answer.Id" />
                            <input type="hidden" name="candidateId" value="@answer.CandidateId" />
                            <button class="btn btn-danger">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>