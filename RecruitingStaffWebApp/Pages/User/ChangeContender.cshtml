@page
@model RecruitingStaffWebApp.Pages.User.ChangeContenderModel
@{
}
<div class="row justify-content-center">
    <form method="post">
        <input type="hidden" asp-for="@Model.Contender.Id" />
        <div class="form-group">
            <label class="col-form-label" asp-for="@Model.Contender.FullName"></label>
            <input class="form-control" asp-for="@Model.Contender.FullName" />
            <span asp-validation-for="@Model.Contender.FullName"></span>
        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="@Model.Contender.DateOfBirth"></label>
            <input class="form-control" asp-for="@Model.Contender.DateOfBirth" />
            <span asp-validation-for="@Model.Contender.DateOfBirth"></span>
        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="@Model.Contender.Address"></label>
            <input class="form-control" asp-for="@Model.Contender.Address" />
            <span asp-validation-for="@Model.Contender.Address"></span>
        </div>
        <button class="btn btn-dark">Отправить</button>
    </form>
</div>