@page
@model RecruitingStaff.WebApp.Pages.User.Questionnaires.QuestionFormModel
@{
}
<div class="row justify-content-center">
    <div class="col-7">
        <form method="post">
            <input type="hidden" asp-for="@Model.Question.Id" />
            <div class="form-group">
                <label>Вопрос</label>
                <input class="form-control" asp-for="@Model.Question.Name" />
            </div>
            <div class="form-group">
                <label>Категория вопроса</label>
                <select asp-for="@Model.Question.QuestionCategoryId" asp-items="@Model.QuestionCategories">
                </select>
            </div>
            <button class="btn btn-dark">Отправить</button>
        </form>
    </div>
</div>