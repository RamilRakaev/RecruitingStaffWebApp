@page
@model RecruitingStaff.WebApp.Pages.User.Questionnaires.ConcreteQuestionCategoryModel
@{
    ViewData["Title"] = Model.QuestionCategory.Name;
}
<div class="row justify-content-center">

    <div class="col-11">
        <div class="d-flex w-100 mb-3 justify-content-between">
            <h4>@Model.QuestionCategory.Name</h4>
            <div>
                <a class="btn btn-dark" asp-page="ConcreteQuestionnaire" asp-route-questionnaireId="@Model.QuestionCategory.QuestionnaireId">Анкета</a>
                <a class="btn btn-success" asp-page="QuestionForm" asp-route-quesionnaireId="@Model.QuestionCategory.QuestionnaireId">Создать вопрос</a>
            </div>
        </div>
    </div>
    <div class="col-12">
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th>Вопросы</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var question in Model.Questions)
                {
                    <tr>
                        <td>
                            <a class="text-dark d-block">@question.Name</a>
                        </td>
                        <td>
                            <a class="btn btn-info" asp-page="AnswersOnQuestion" asp-route-questionId="@question.Id">Ответы</a>
                            <a class="btn btn-warning" asp-page="QuestionForm" asp-route-quesionnaireId="@Model.QuestionCategory.QuestionnaireId" asp-route-questionId="@question.Id">Изменить</a>
                            <form class="d-inline" method="post">
                                <input type="hidden" name="questionId" value="@question.Id" />
                                <input type="hidden" name="questionCategoryId" value="@Model.QuestionCategory.Id" />
                                <button class="btn btn-danger">Удалить</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>