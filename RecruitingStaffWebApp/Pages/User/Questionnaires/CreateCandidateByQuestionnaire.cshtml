@page
@model RecruitingStaff.WebApp.Pages.User.Questionnaires.CreateCandidateByQuestionnaireModel
@using RecruitingStaff.Domain.Model.CandidateQuestionnaire;
@{
    Candidate candidate = new Candidate();
}
<div class="row justify-content-center">
    <form method="post">
        <input type="hidden" name="questionnaireId" value="@Model.QuestionnaireId" />
        <div class="form-group">
            <label>Полное имя</label>
            <input type="text" class="form-control" asp-for="@candidate.FullName" />
        </div>
        <div class="form-group">
            <label>Дата рождения</label>
            <input type="date" class="form-control" asp-for="@candidate.DateOfBirth" />
        </div>
        <div class="form-group">
            <label>Адрес</label>
            <input type="text" class="form-control" asp-for="@candidate.Address" />
        </div>
        <div class="form-group">
            <label>Номер телефона</label>
            <input type="text" class="form-control" asp-for="@candidate.TelephoneNumber" />
        </div>
        <div class="form-group">
            <label>Семейное положение</label>
            <input type="text" class="form-control" asp-for="@candidate.MaritalStatus" />
        </div>
        <a class="btn btn-dark" asp-page="Questionnaires">Анкеты</a>
        <button class="btn btn-success float-right">Отправить</button>
    </form>
</div>