@page
@model RecruitingStaff.WebApp.Pages.User.Questionnaires.AnswerFormModel
@{
}
<div class="row justify-content-center">
    <div class="col-7">
        <form class="form-inline" method="post" asp-page-handler="SearchCandidates">
            <input type="hidden" name="questionId" value="@Model.Answer.QuestionId" />
            <div class="input-group mb-3 w-100">
                <input type="text" class="form-control" placeholder="Фрагмент имени кандидата" aria-describedby="button-search" name="candidateName" />
                <button class="btn btn-outline-primary" id="button-search">Поиск</button>
            </div>
        </form>
    </div>
    <div class="col-7">
        @if (Model.Candidates.Length == 0)
        {
            <p class="text-warning">Выберите кандидата</p>
        }
        else
        {
            <form method="post" asp-page-handler="CreateAnswer">
                <input type="hidden" asp-for="@Model.Answer.QuestionId" />
                <div class="form-group">
                    <label>Текст ответа</label>
                    <input class="form-control" asp-for="@Model.Answer.Comment" />
                </div>
                <div class="form-group">
                    <label>Оценка</label>
                    <input class="form-control" type="number" asp-for="@Model.Answer.Estimation" />
                </div>
                @foreach (var candidate in Model.Candidates)
                {
                    <div class="form-group">
                        <input class="custom-radio" type="radio" asp-for="@Model.Answer.CandidateId" value="@candidate.Id" />
                        <label>@candidate.FullName</label>
                    </div>
                }
                <button class="btn btn-dark">Отправить</button>
            </form>
        }
    </div>
</div>