@page
@model RecruitingStaff.WebApp.Pages.User.Files.TestTaskFormModel
@{
    ViewData["Title"] = "Добавить тестовое задание";
}
@section Styles {
<link rel="stylesheet" href="~/css/interface elements/select.css">
}
<div class="row justify-content-center">
    <div class="col-5">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>Название</label>
                <input class="form-control" asp-for="@Model.TestTaskViewModel.Name" />
            </div>
            <div class="form-group">
                <div class="form_label">
                    <span class="form_text">Вакансии</span>
                    <div class="multiselect_block">
                        <label for="select-1" class="field_multiselect">Вакансии</label>
                        <input id="checkbox-1" class="multiselect_checkbox" type="checkbox">
                        <label for="checkbox-1" class="multiselect_label"></label>
                        <select id="select-1"
                                class="field_select"
                                asp-for="@Model.TestTaskViewModel.VacancyId"
                                asp-items="@Model.TestTaskViewModel.VacanciesSelectList"
                                multiple>
                        </select>
                    </div>
                    <span class="error_text"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-form-label">Файл</label>
                <input class="form-control-file" type="file" name="formFile" accept=".docx,.xlsx" />
            </div>
            <button class="btn btn-success">Отправить</button>
        </form>
    </div>
</div>
@section Scripts {
<script src="~/js/interface elements/select.js"></script>
}