@page
@model RecruitingStaff.WebApp.Pages.User.CreateCandidateModel
@{
}
<div class="row justify-content-center">
    <form method="post">
        <div class="form-group">
            <label class="col-form-label"></label>
            <input class="form-control" asp-for="@Model.Candidate.FullName" />
        </div>
        <div class="form-group">
            <label class="col-form-label"></label>
            <input class="form-control m-2" min="1900-01-01" value="1990-01-01" type="date" asp-for="@Model.Candidate.DateOfBirth" />
        </div>
        <div class="form-group">
            <label class="col-form-label"></label>
            <input class="form-control" asp-for="@Model.Candidate.Address" />
        </div>
        <div class="form-group">
            <label class="col-form-label"></label>
            <input class="form-control" asp-for="@Model.Candidate.TelephoneNumber" />
        </div>
        <div class="form-group">
            <label class="col-form-label"></label>
            <input class="form-control" asp-for="@Model.Candidate.MaritalStatus" />
        </div>
        <button class="btn btn-dark">Отправить</button>
    </form>
</div>