@page
@model RecruitingStaff.WebApp.Pages.User.Candidates.PreviousJobs.CreatePreviousJobPlacementModel
@{
    ViewData["Title"] = "Создание нового места работы";
}
<div class="row justify-content-center">
    <div class="col-5">
        <form method="post">
            <input type="hidden" asp-for="@Model.PreviousJobPlacementViewModel.CandidateId" />
            <div class="form-group">
                <label>Название</label>
                <input class="form-control" asp-for="@Model.PreviousJobPlacementViewModel.Name" />
                <span asp-validation-for="@Model.PreviousJobPlacementViewModel.Name"></span>
            </div>
            <div class="form-group">
                <label>Номер телефона</label>
                <input class="form-control" asp-for="@Model.PreviousJobPlacementViewModel.PhoneNumber" />
                <span asp-validation-for="@Model.PreviousJobPlacementViewModel.PhoneNumber"></span>
            </div>
            <div class="form-group">
                <label>Адрес</label>
                <input class="form-control" asp-for="@Model.PreviousJobPlacementViewModel.PhoneNumber" />
                <span asp-validation-for="@Model.PreviousJobPlacementViewModel.Address"></span>
            </div>
            <div class="form-group">
                <label>Должность</label>
                <input class="form-control" asp-for="@Model.PreviousJobPlacementViewModel.Address" />
                <span asp-validation-for="@Model.PreviousJobPlacementViewModel.PositionAtWork"></span>
            </div>
            <div class="form-group">
                <label>Зарплата</label>
                <input class="form-control" asp-for="@Model.PreviousJobPlacementViewModel.PositionAtWork" />
                <span asp-validation-for="@Model.PreviousJobPlacementViewModel.Salary"></span>
            </div>
            <div class="form-group">
                <label>Дата начала работы</label>
                <input class="form-control"
                       type="date"
                       asp-for="@Model.PreviousJobPlacementViewModel.DateOfStart"
                       min="1900-01-01"
                       value="2010-01-01"
                       max="@DateTime.Now.ToString("d")"/>
                <span asp-validation-for="@Model.PreviousJobPlacementViewModel.DateOfStart"></span>
            </div>
            <div class="form-group">
                <label>Дата конца работы</label>
                <input class="form-control"
                       type="date"
                       asp-for="@Model.PreviousJobPlacementViewModel.DateOfEnd"
                       min="1900-01-01"
                       value="2010-01-01"
                       max="@DateTime.Now.ToString("d")" />
                <span asp-validation-for="@Model.PreviousJobPlacementViewModel.DateOfEnd"></span>
            </div>
            <div class="form-group">
                <label>Обязанности</label>
                <input class="form-control" asp-for="@Model.PreviousJobPlacementViewModel.Responsibilities" />
                <span asp-validation-for="@Model.PreviousJobPlacementViewModel.Responsibilities"></span>
            </div>
            <div class="form-group">
                <label>Причина ухода</label>
                <input class="form-control" asp-for="@Model.PreviousJobPlacementViewModel.LeavingReason" />
                <span asp-validation-for="@Model.PreviousJobPlacementViewModel.LeavingReason"></span>
            </div>
            <a class="btn btn-dark"
               asp-page="PreviousJobs"
               asp-route-candidateId="@Model.PreviousJobPlacementViewModel.CandidateId">Предыдущие места работы</a>
            <button class="btn btn-success">Отправить</button>
        </form>
    </div>
</div>