@page
@model RecruitingStaffWebApp.Pages.User.Candidates.ChangeCandidateModel
@{
    ViewData["Title"] = Model.Candidate.FullName;
}
<div class="row justify-content-center">
    <div class="col-5">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="@Model.Candidate.Id" />
            <div class="form-group">
                <label class="col-form-label">Полное имя</label>
                <input class="form-control" asp-for="@Model.Candidate.FullName" />
                <span asp-validation-for="@Model.Candidate.FullName"></span>
            </div>
            <div class="form-group">
                <label class="col-form-label">Дата рождения</label>
                <input class="form-control" asp-for="@Model.Candidate.DateOfBirth" />
                <span asp-validation-for="@Model.Candidate.DateOfBirth"></span>
            </div>
            <div class="form-group">
                <label class="col-form-label">Адрес</label>
                <input class="form-control" asp-for="@Model.Candidate.Address" />
                <span asp-validation-for="@Model.Candidate.Address"></span>
            </div>
            <div class="form-group">
                <label class="col-form-label">Номер телефона</label>
                <input class="form-control" asp-for="@Model.Candidate.TelephoneNumber" />
                <span asp-validation-for="@Model.Candidate.TelephoneNumber"></span>
            </div>
            <div class="form-group">
                <label class="col-form-label">Почта</label>
                <input class="form-control" asp-for="@Model.Candidate.EmailAddress" />
                <span asp-validation-for="@Model.Candidate.EmailAddress"></span>
            </div>
            <div class="form-group">
                <label class="col-form-label">Семейное положение</label>
                <input class="form-control" asp-for="@Model.Candidate.MaritalStatus" />
                <span asp-validation-for="@Model.Candidate.MaritalStatus"></span>
            </div>
            <div class="form-group">
                <label class="col-form-label">Название анкеты</label>
                <select name="questionnaireId" class="custom-select" asp-items="@Model.Questionnaires"></select>
            </div>
            <div class="form-group">
                <label class="col-form-label">Файл анкеты</label>
                <input type="file" class="custom-file" name="formFile" />
            </div>
            <a class="btn btn-dark"
               asp-page="/User/ConcreteCandidate"
               asp-route-CandidateId="@Model.Candidate.Id">
                Кандидат
            </a>
            <a class="btn btn-dark"
               asp-page="Candidates">
                Список
            </a>
            <button class="btn btn-success float-right">Отправить</button>
        </form>
    </div>
</div>