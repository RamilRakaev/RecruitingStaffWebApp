@page
@model RecruitingStaffWebApp.Pages.User.Vacancies.VacanciesModel
@{
    ViewData["Title"] = "Вакансии";
}
<div class="row justify-content-center">
    <a class="btn btn-success mb-3" asp-page="VacancyForm">Создать вакансию</a>
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Название вакансии</th>
                <th>Описание</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vacancy in Model.Vacancies)
            {
                <tr>
                    <td>@vacancy.Id</td>
                    <td>@vacancy.Name</td>
                    <td>@vacancy.Description</td>
                    <td>
                        <a class="btn btn-warning m-2 d-inline" asp-page="VacancyForm" asp-route-vacancyId="@vacancy.Id">Изменить</a>
                        <form class="d-inline" method="post">
                            <input type="hidden" name="vacancyId" value="@vacancy.Id" />
                            <button class="btn btn-danger m-2 d-inline">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>